{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*.ts",
    ]
}
